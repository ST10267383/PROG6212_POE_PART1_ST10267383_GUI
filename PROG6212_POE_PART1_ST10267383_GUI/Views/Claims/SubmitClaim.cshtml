@{
    ViewData["Title"] = "Submit a Claim";
}

<h2>Submit a Claim</h2>

<form>
    <div class="form-group">
        <label for="claimTitle">Claim Title</label>
        <input type="text" class="form-control" id="claimTitle" placeholder="Enter claim title">
    </div>
    <div class="form-group">
        <label for="claimDetails">Claim Details</label>
        <textarea class="form-control" id="claimDetails" placeholder="Enter claim details"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>
